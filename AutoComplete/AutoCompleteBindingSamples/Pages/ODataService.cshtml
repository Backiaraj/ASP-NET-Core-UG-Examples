            <e-autocomplete-fields value="CustomerID"></e-autocomplete-fields>
            <e-data-manager url="https://services.odata.org/V4/Northwind/Northwind.svc/Orders" adaptor="ODataAdaptor" crossDomain="true"></e-data-manager>
        </ejs-autocomplete>
    </div>
</div>

